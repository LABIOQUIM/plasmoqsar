{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "yarn lint"
    ]
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": ["package.json", "apps/api/package.json", "apps/ui/package.json", "packages/database/package.json"]
    },
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits"
      }
    }
  }
}